 HSM_Inc/ib_include/hsm_config_srvr_data.h | 2 +-
 HSM_Lib/ib_library/fm_xml.c               | 2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/HSM_Inc/ib_include/hsm_config_srvr_data.h b/HSM_Inc/ib_include/hsm_config_srvr_data.h
index c4b56fb..5f7d022 100755
--- a/HSM_Inc/ib_include/hsm_config_srvr_data.h
